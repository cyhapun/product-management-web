extends ../../layouts/default.pug
include ../../mixins/box-head

block main
  .container.my-3 
    .row 
      .col-12 
        +box-head("List of Products")

    .row 
      each product in products  
        .col-12.col-md-6.col-lg-4.mb-4.d-flex
          a.product-item.flex-fill(href=`/products/${product.slug == null ? product._id : product.slug}`)
            .inner-image 
              img(src=product.thumbnail, alt=product.title)
            .inner-content 
              h3.inner-title #{product.title}
              .inner-price-wrapper 
                .inner-price-new #{product.newPrice.toFixed(2)}$
                .inner-price-old #{product.price}$
              .inner-discount -#{product.discountPercentage}%
