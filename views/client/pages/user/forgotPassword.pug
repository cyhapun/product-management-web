extends ../../layouts/default.pug

block main
  style.
    body {
      background: linear-gradient(135deg, #f0f4ff, #ffffff);
    }
    .forgot-wrapper {
      min-height: calc(100vh - 80px);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px 20px;
    }
    .forgot-card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.08);
      padding: 35px;
      max-width: 420px;
      width: 100%;
      text-align: center;
    }
    .forgot-card .icon {
      font-size: 3rem;
      color: #0d6efd;
      margin-bottom: 15px;
    }
    .forgot-card h4 {
      font-weight: 600;
      margin-bottom: 10px;
    }
    .forgot-card p {
      color: #6c757d;
      font-size: 0.95rem;
      margin-bottom: 25px;
    }
    .form-control:focus {
      box-shadow: 0 0 0 0.2rem rgba(13,110,253,0.25);
    }
    .btn-submit {
      width: 100%;
      border-radius: 8px;
      padding: 10px;
      font-weight: 500;
    }
    .back-login {
      display: inline-block;
      margin-top: 15px;
      font-size: 0.9rem;
      color: #0d6efd;
      text-decoration: none;
    }
    .back-login:hover {
      text-decoration: underline;
    }

  .forgot-wrapper
    .forgot-card
      i.bi.bi-shield-lock.icon

      h4 Forgot Your Password?
      p Enter your email address below and weâ€™ll send you a link to reset your password.

      // Form Forgot Password
      form(action="/user/password/forgot" method="POST")
        .form-group.mb-3.text-start
          label(for="email") Email Address
          input#email.form-control(type="email" name="email" placeholder="Enter your email" required)

        button.btn.btn-primary.btn-submit(type="submit")
          i.bi.bi-envelope.me-1.mr-1
          | Send verify code

      a.back-login(href="/user/login")
        i.bi.bi-arrow-left.me-1.mr-1
        | Back to Login
