extends ../layouts/default.pug

block main
  style.
    .container-404 {
      text-align: center;
      padding: 80px 20px;
      font-family: "Segoe UI", sans-serif;
      color: #333;
    }

    .container-404 h1 {
      font-size: 100px;
      margin: 0;
      color: #ff6b6b;
      font-weight: bold;
    }

    .container-404 p {
      font-size: 24px;
      margin: 20px 0;
    }

    .container-404 .button {
      display: inline-block;
      margin-top: 20px;
      padding: 12px 24px;
      background-color: #3498db;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-size: 16px;
      transition: background-color 0.3s ease;
    }

    .container-404 .button:hover {
      background-color: #2980b9;
    }

  .container-404
    h1 404
    p=pageTitle || "Page Not Found"
    a.button(href="/") Back to Home
