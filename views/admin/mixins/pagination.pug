mixin pagination(pagination) 
 nav
    ul(class="pagination justify-content-center") 
      if (pagination.currentPage - 1 >= 1)
        li(class="page-item")
          button(class="page-link" dirPage=pagination.currentPage - 1) Previous

      -for(let index = 0; index < pagination.pageNumber; index++)
        li(class=`page-item ${index === pagination.currentPage - 1 ? "active":""} shadow-none`)
          button(class="page-link" dirPage=index+1)=index + 1
          
      if (pagination.currentPage + 1 <= pagination.pageNumber) 
        li(class="page-item" pageNumber=pagination.pageNumber)
          button(class="page-link" dirPage=pagination.currentPage + 1) Next